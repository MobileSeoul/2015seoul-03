<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="choiyh1006.example.com.seouldal2.foodPage"
    android:background="#03121C">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:background="#0b2639">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/back_btn"
            android:src="@drawable/back_btn"
            android:onClick="onClick"
            android:layout_centerVertical="true"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food"
            android:paddingRight="10dp"
            android:gravity="center"
            android:textColor="#fff"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="20dp"
            android:id="@+id/title"
        />





    </RelativeLayout>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="20dp"

        android:gravity="center"
        android:id="@+id/dynamic"
        android:textColor="#FDB913"

        />

    <ScrollView
        android:layout_marginTop="18dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:scrollbars="none"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/food_lay"
                android:onClick="onClick">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recommend"
                    android:textColor="#FDB913"
                    android:gravity="center"
                    android:paddingBottom="140dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textSize="15dp"
                    android:id="@+id/cu_title"
                    />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:lineSpacingMultiplier = "1.01"
                    android:lineSpacingExtra = "4dp"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:paddingBottom="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"

                    android:textSize="14dp"
                    android:id="@+id/cu_bon"
                    />
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:id="@+id/detailed"
                    android:layout_marginTop="0dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/btn_line"
                    android:layout_below="@+id/cu_bon"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VIEW MORE"
                    android:layout_alignBottom="@+id/detailed"
                    android:layout_alignLeft="@+id/detailed"
                    android:layout_alignRight="@+id/detailed"
                    android:layout_alignTop="@+id/detailed"
                    android:gravity="center"
                    android:textColor="#FDB913"
                    android:textSize="12dp"
                    android:id="@+id/detail"

                    />
            </RelativeLayout>

            <ListView

                android:layout_marginTop="8dp"
                android:dividerHeight="8dp"
                android:divider="#03121C"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mList"

                android:layout_gravity="center_horizontal" />

        </LinearLayout>

    </ScrollView>



</LinearLayout>
