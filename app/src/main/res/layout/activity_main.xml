<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".MainActivity"
    android:id="@+id/main_lay">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout">
        <TextView
            android:id="@+id/text"
            android:textSize="24dp"
            android:text="Please turn on the GPS!"
            android:layout_marginTop="90dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:gravity="center"/>

        <TextView
            android:id="@+id/text2"
            android:layout_marginTop="145dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="19dp"
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/text3"
            android:layout_marginTop="180dp"
            android:textSize="24dp"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#fff"/>


        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/weather_icon"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/text3"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_below="@+id/weather_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:textSize="18dp"
            android:id="@+id/ment"
            android:textColor="#fff"
            android:paddingLeft="13dp"
            android:lineSpacingMultiplier = "1.1"
            android:lineSpacingExtra = "8dp"
            android:paddingRight="13dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            />



        <ImageView
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:id="@+id/detail"
            android:layout_marginTop="28dp"

            android:layout_centerHorizontal="true"
            android:src="@drawable/btn_line"
            android:layout_below="@+id/ment"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/view_more"
            android:onClick="onClick"
            android:layout_alignBottom="@+id/detail"
            android:layout_alignLeft="@+id/detail"
            android:layout_alignRight="@+id/detail"
            android:layout_alignTop="@+id/detail"
            android:textColor="#FDB913"
            android:clickable="true"
            android:text="VIEW MORE"
            android:textSize="15dp"
            android:gravity="center"
            />
        </RelativeLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:background="@drawable/btm_menu"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textColor="#fff"
            android:text="NightView"
            android:id="@+id/scene_btn"
            android:onClick="onClick"
            android:gravity="center"
            android:clickable="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Food"
            android:textColor="#fff"
            android:id="@+id/food_btn"
            android:onClick="onClick"
            android:gravity="center"
            android:clickable="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Festival"
            android:textColor="#fff"
            android:id="@+id/festival_btn"
            android:onClick="onClick"
            android:gravity="center"
            android:clickable="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Toilet"
            android:id="@+id/rest_btn"
            android:onClick="onClick"
            android:textColor="#fff"
            android:gravity="center"
            android:clickable="true"/>
    </LinearLayout>




</RelativeLayout>
